<%- include('../layout/header') %>

<div class="content">
  <div class="page-container">

    <div class="card">

      <!-- Header: Title, Search, Add Button -->
      <div class="card-header d-flex align-items-center justify-content-between flex-wrap header-container">
        <h2 class="page-title">Products List</h2>

        <div class="header-controls">
          <div class="input-group search-group">
            <input
              type="text"
              id="userSearch"
              class="form-control"
              placeholder="Search products..."
              aria-label="Search products"
            />
            <button class="btn btn-primary" id="searchBtn" type="button">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
           <div>
             <a href="/product/create" class="btn btn-add btn-primary">+ Add New Products</a>
           </div>
        </div>
      </div>
      <!-- Responsive Table -->
      <div class="table-responsive">
        <table class="admin-table">
          <thead>
              <tr>
                  <th>#</th>
                  <th>Industry</th>
                  <th>Category</th>
                  <th>Subcategory</th>
                  <th>Name</th>
                  <th>Total Variants</th>
                  <th>Product Tags</th>
                  <th>Status</th>
                  <th>Action</th>
              </tr>
          </thead>
          <tbody>
              <% if (products && products.length > 0) { %>
                  <% products.forEach((product, index) => { %>
                      <tr>
                      <td><%= index + 1 %></td>
                      <td><%= product.industry_id ? product.industry_id.name : '' %></td>
                      <td><%= product.category_id ? product.category_id.name : '' %></td>
                      <td><%= product.subcategory_id ? product.subcategory_id.name : '' %></td>
                      <td><%= product.name %></td>
                      <td><%= product.variants.length %></td>
                      <td>
                        <% if (product.product_tags && product.product_tags.length) { %>
                          <% product.product_tags.forEach(tag => { %>
                            <span class="badge bg-secondary">#<%= tag.name %></span>
                          <% }) %>
                        <% } else { %>
                          N/A
                        <% } %>
                      </td>
                      <td>
                        <% if (product.status === 'active') { %>
                          <span class="status active"><%= product.status %></span>
                          <% } else { %>
                          <span class="status inactive"><%= product.status %></span> 
                          <% } %>
                      </td>
                      <td>
                          <a href="<%= BASE_URL %>/product/view/<%= product.id %>" class="action-btn view" title="View"><i class="fas fa-eye"></i></a>
                          <a href="<%= BASE_URL %>/product/edit/<%= product.id %>" class="action-btn edit" title="Edit"><i class="fas fa-edit"></i></a>
                          <a href="<%= BASE_URL %>/product/delete/<%= product.id %>" class="action-btn delete" title="Delete"><i class="fas fa-trash-alt"></i></a>
                      </td>
                      </tr>
                  <% }) %>
                  <% } else { %>
                  <tr><td class="text-center" colspan="7">No data found</td></tr>
                  <% } %>
              </tbody>
        </table>
      </div>

    </div>

  </div>
</div>

<%- include('../layout/footer') %>
