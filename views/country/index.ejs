<%- include('../layout/header') %>

<div class="content">
  <div class="page-container">

    <div class="card">

      <!-- Header: Title, Search, Add Button -->
      <div class="card-header d-flex align-items-center justify-content-between flex-wrap header-container">
        <h2 class="page-title">Country List</h2>

        <div class="header-controls">
          <div class="input-group search-group">
            <input
              type="text"
              id="userSearch"
              class="form-control"
              placeholder="Search country..."
              aria-label="Search country"
            />
            <button class="btn btn-primary" id="searchBtn" type="button">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
           <div>
             <a href="/country/create" class="btn btn-add btn-primary">+ Add New Country</a>
           </div>
        </div>
      </div>

      <!-- Responsive Table -->
      <div class="table-responsive">
        <table class="admin-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Code</th>
                <th>Currency</th>
                <th>Action</th>
            </tr>
        </thead>
            <tbody>
             <% if (country_list && country_list.length > 0) { %>
                <% country_list.forEach((country, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= country.name %></td>
                      <td><%= country.code %></td>
                      <td><%= country.currencies %></td>
                      <td>
                          <a href="<%= BASE_URL %>/country/edit/<%= country.id %>" class="action-btn edit" title="Edit"><i class="fas fa-edit"></i></a>
                          <a href="<%= BASE_URL %>/country/delete/<%= country.id %>" class="action-btn delete" title="Delete"><i class="fas fa-trash-alt"></i></a>
                      </td>
                    </tr>
                <% }) %>
                <% } else { %>
                <tr><td class="text-center" colspan="5">No data found</td></tr>
                <% } %>
            </tbody>
      </table>
      </div>

    </div>

  </div>
</div>

<%- include('../layout/footer') %>
