<%- include('../layout/header') %>
<div class="content">
<div class="container mt-4">
  <div class="card shadow-sm border-0">
    <div class="card-header d-flex justify-content-between align-items-center bg-warning text-dark fw-bold">
        <% if (country) { %>
             <span>Edit Country</span>
        <% } else { %>
             <span>Create Country</span>
        <% } %>
      <a href="/country" class="btn btn-sm btn-dark">‚Üê Back to List</a>
    </div>

    <div class="card-body">
      <form action="/country/store" id="adminUserForm" method="POST" enctype='multipart/form-data'>
          <% if (country) { %>
            <input type="hidden" name="id" value="<%= country.id %>">
            <% } %>
        <div class="row mb-3">
            
          <div class="col-md-6">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= country && country.name ? country.name : '' %>"  placeholder="Enter Country Name" required>
          </div>
          
          <div class="col-md-6">
            <label for="name" class="form-label">Code</label>
            <input type="text" class="form-control" id="code" name="code" value="<%= country && country.code ? country.code : '' %>"  placeholder="Enter Country Code" required>
          </div>
          <div class="col-md-6">
            <label for="name" class="form-label">Currency</label>
            <input type="text" class="form-control" id="currencies" name="currencies" value="<%= country && country.currencies ? country.currencies : '' %>"  placeholder="Enter Country Currency" required>
          </div>
        </div>

        <div class="text-end">
             <% if (country) { %>
                <button type="submit" class="btn btn-primary w-auto">Update Country</button>
             <% }else{ %>
                 <button type="submit" class="btn btn-primary w-auto">Create Country</button>
                <% } %>
        </div>
      </form>
    </div>
  </div>
</div>

</div>
<script>
  document.getElementById('mobile').addEventListener('input', function (e) {
    this.value = this.value.replace(/[^0-9]/g, ''); // remove non-digits
    if (this.value.length > 10) {
      this.value = this.value.slice(0, 10); // max 10 digits
    }
  });
</script>


<%- include('../layout/footer') %>
