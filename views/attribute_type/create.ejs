<%- include('../layout/header') %>
<div class="content">
<div class="container mt-4">
  <div class="card shadow-sm border-0">
    <div class="card-header d-flex justify-content-between align-items-center bg-warning text-dark fw-bold">
        <% if (attribute_type) { %>
             <span>Edit Attribute Type</span>
        <% } else { %>
             <span>Create Attribute Type</span>
        <% } %>
      <a href="/attribute-type" class="btn btn-sm btn-dark">‚Üê Back to List</a>
    </div>

    <div class="card-body">
      <form action="/attribute-type/store" id="adminUserForm" method="POST" enctype='multipart/form-data'>
          <% if (attribute_type) { %>
            <input type="hidden" name="id" value="<%= attribute_type.id %>">
            <% } %>
        <div class="row mb-3">
            <div class="mb-3">
              <label>Name <span class="mandatory">*</span></label>
                <input type="text" class="form-control" id="name" name="name" value="<%= attribute_type && attribute_type.name ? attribute_type.name : '' %>" placeholder="Enter Attribute Type Name" data-required="Name">
            </div>
            
            <!-- <div class="col-md-12 mb-2">
              <label for="Status" class="form-label">Status <span class="mandatory">*</span></label>
                <select name="status" id="status" class="form-control">
                  <option value="active" <%= attribute_type && attribute_type.status === 'active' ? 'selected' : '' %>>Active</option>
                  <option value="inactive" <%= attribute_type && attribute_type.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                </select>
            </div> -->
        </div>

        <div class="text-end">
             <% if (attribute_type) { %>
                <button type="submit" class="btn btn-primary w-auto">Update Attribute Type</button>
             <% }else{ %>
                 <button type="submit" class="btn btn-primary w-auto">Create Attribute Type</button>
                <% } %>
        </div>
      </form>
    </div>
  </div>
</div>

</div>

<%- include('../layout/footer') %>
<script>
  CKEDITOR.replace('content',{
    versionCheck: false
  });
</script>
