<%- include('../layout/header') %>

<div class="content">
  <div class="page-container">

    <div class="card">

      <!-- Header: Title, Search, Add Button -->
      <div class="card-header d-flex align-items-center justify-content-between flex-wrap header-container">
        <h2 class="page-title">Units List</h2>

        <div class="header-controls">
          <div class="input-group search-group">
            <input
              type="text"
              id="userSearch"
              class="form-control"
              placeholder="Search units..."
              aria-label="Search units"
            />
            <button class="btn btn-primary" id="searchBtn" type="button">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
           <div>
             <a href="/units/create" class="btn btn-add btn-primary">+ Add New Units</a>
           </div>
        </div>
      </div>

      <!-- Responsive Table -->
      <div class="table-responsive">
          <table class="admin-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (units && units.length > 0) { %>
                    <% units.forEach((unit, index) => { %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td><%= unit.name %></td>
                          <td>
                            <% if (unit.status === 'active') { %>
                              <span class="status active"><%= unit.status %></span>
                              <% } else { %>
                              <span class="status inactive"><%= unit.status %></span> 
                              <% } %>
                          </td>
                          <td>
                              <a href="<%= BASE_URL %>/units/edit/<%= unit.id %>" class="action-btn edit" title="Edit"><i class="fas fa-edit"></i></a>
                              <a href="<%= BASE_URL %>/units/delete/<%= unit.id %>" class="action-btn delete" title="Delete"><i class="fas fa-trash-alt"></i></a>
                          </td>
                        </tr>
                    <% }) %>
                    <% } else { %>
                    <tr><td class="text-center" colspan="7">No data found</td></tr>
                    <% } %>
                </tbody>
          </table>
      </div>

    </div>

  </div>
</div>

<%- include('../layout/footer') %>
