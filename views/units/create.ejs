<%- include('../layout/header') %>
<div class="content">
<div class="container mt-4">
  <div class="card shadow-sm border-0">
    <div class="card-header d-flex justify-content-between align-items-center bg-warning text-dark fw-bold">
        <% if (units) { %>
             <span>Edit Units</span>
        <% } else { %>
             <span>Create Units</span>
        <% } %>
      <a href="/units" class="btn btn-sm btn-dark">‚Üê Back to List</a>
    </div>

    <div class="card-body">
      <form action="/units/store" id="adminUserForm" method="POST" enctype='multipart/form-data'>
          <% if (units) { %>
            <input type="hidden" name="id" value="<%= units.id %>">
            <% } %>
        <div class="row mb-3">
            <div class="col-md-6">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= units && units.name ? units.name : '' %>"  placeholder="Enter Units" required>
            </div>
            <div class="col-md-6">
              <label for="short_name" class="form-label">Short Name</label>
              <input type="text" class="form-control" id="short_name" name="short_name" value="<%= units && units.short_name ? units.short_name : '' %>"  placeholder="Enter Short Name" required>
            </div>
            <div class="col-md-6">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status" required>
                    <option value="">Select status</option>
                    <option value="active" <% if (units && units.status === 'active') { %> selected <% } %>>Active</option>
                    <option value="inactive" <% if (units && units.status === 'inactive') { %> selected <% } %>>Inactive</option>
                </select>
            </div>
        </div>
        <div class="text-end">
             <% if (units) { %>
                <button type="submit" class="btn btn-primary w-auto">Update Units</button>
             <% }else{ %>
                 <button type="submit" class="btn btn-primary w-auto">Create Units</button>
                <% } %>
        </div>
      </form>
    </div>
  </div>
</div>

</div>


<%- include('../layout/footer') %>
