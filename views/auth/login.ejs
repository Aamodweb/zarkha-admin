<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="<%= ASSET_URL %>/css/login.css">
</head>
<body>
  <div class="login-card">
    <div class="logo">
      <img src="<%= ASSET_URL %>/image/zarkhabiglogo.png" alt="Logo">
    </div>
    <h2>Admin Login</h2>
    <form id="loginForm">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" name="email" id="email" value="info@zarkha.com" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" value="admin@123" placeholder="Enter password">
        </div>
        <div class="error-msg" style="color: red; display: none;"></div>
        <button class="login-btn" type="submit">Login</button>
    </form>

    <div class="footer">
      &copy; 2025 Admin Panel
    </div>
  </div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $('#loginForm').on('submit', function(e) {
    e.preventDefault();

    $.ajax({
      url: '/login', // your POST login route
      type: 'POST',
      data: $(this).serialize(),
      success: function(response) {
        if (response.success) {
          window.location.href = response.redirect || '/dashboard';
        } else {
          $('.error-msg').text(response.message || 'Login failed').show();
        }
      },
      error: function(xhr) {
        const msg = xhr.responseJSON?.message || 'Something went wrong';
        $('.error-msg').text(msg).show();
      }
    });
  });
</script>

</body>
</html>
